{
  "name": "sendpulse-mcp-server",
  "version": "1.0.2",
  "description": "MCP server for SendPulse API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:mcp": "MODE=mcp node dist/index.js",
    "start:http": "MODE=http node dist/index.js",
    "dev": "tsc && npm run start:mcp",
    "dev:http": "tsc && npm run start:http",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "sendpulse",
    "mcp",
    "api",
    "chatbot"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.13",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3"
  }
}
